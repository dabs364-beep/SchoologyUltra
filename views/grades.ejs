    <style>
        /* Grade styling already in global CSS - only page-specific styles here */
        
        .category-section {
            background: var(--bg-tertiary);
            border-radius: var(--radius-lg);
            padding: var(--space-4);
            margin-bottom: var(--space-4);
        }
        
        .category-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: var(--space-3) var(--space-4);
            margin-bottom: var(--space-3);
            border-bottom: 2px solid var(--text-primary);
            flex-wrap: wrap;
            gap: var(--space-2);
        }
        
        .category-left {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }
        
        .category-right {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }
        
        .category-grade {
            display: flex;
            align-items: center;
            gap: var(--space-2);
        }
        
        .category-original {
            font-size: 0.875rem;
            font-weight: 600;
            display: inline-flex;
            gap: var(--space-2);
            align-items: center;
        }
        
        .category-edited {
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--accent-warning);
        }
        
        .grade-arrow {
            color: var(--text-tertiary);
            font-size: 0.75rem;
        }
        
        .section-grade-display {
            display: flex;
            align-items: center;
            gap: var(--space-3);
        }
        
        .original-grade {
            display: flex;
            align-items: center;
            gap: var(--space-2);
        }
        
        .edited-grade {
            display: flex;
            align-items: center;
            gap: var(--space-2);
            padding-left: var(--space-3);
            border-left: 2px solid var(--accent-warning);
        }
        
        .edited-grade .grade-percentage,
        .edited-grade .grade-letter {
            color: var(--accent-warning);
        }
        
        .add-assignment-section {
            margin-top: var(--space-4);
            padding: var(--space-4);
            background: var(--bg-secondary);
            border-radius: var(--radius-lg);
            border: 1px dashed var(--border-medium);
        }
        
        .add-assignment-section h4 {
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: var(--space-3);
        }
        
        .add-assignment-form {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            flex-wrap: wrap;
        }
        
        .add-assignment-form input {
            padding: var(--space-2) var(--space-3);
            font-size: 0.8125rem;
            border: 1px solid var(--border-medium);
            border-radius: var(--radius-md);
            background: var(--bg-card);
        }
        
        .add-assignment-form input[type="text"] {
            width: 150px;
        }
        
        .add-assignment-form input[type="number"] {
            width: 70px;
            text-align: center;
        }
        
        .custom-assignment-row {
            background: rgba(255, 159, 10, 0.05);
        }
        
        .custom-badge {
            font-size: 0.625rem;
            padding: 2px 6px;
            background: var(--accent-warning);
            color: white;
            border-radius: var(--radius-sm);
            margin-left: var(--space-2);
            text-transform: uppercase;
            font-weight: 600;
        }
        
        .remove-custom {
            background: none;
            border: none;
            color: var(--accent-danger);
            cursor: pointer;
            font-size: 1rem;
            padding: 0;
            opacity: 0.7;
            transition: opacity 0.2s;
        }
        
        .remove-custom:hover {
            opacity: 1;
        }

        /* Debug panel styling */
        .grade-debug {
            background: rgba(14, 165, 233, 0.06);
            border: 1px solid rgba(14, 165, 233, 0.12);
            padding: var(--space-3);
            border-radius: var(--radius-md);
            font-size: 0.85rem;
            color: var(--text-primary);
        }

        .grade-debug .row {
            display: flex;
            justify-content: space-between;
            gap: var(--space-4);
            margin-bottom: var(--space-2);
            flex-wrap: wrap;
        }

        .debug-toggle {
            margin-left: var(--space-2);
            padding: 6px 8px;
            font-size: 0.8rem;
            border-radius: var(--radius-sm);
            cursor: pointer;
        }
        .debug-toggle.active {
            background: var(--accent-info);
            color: white;
        }

        .grade-debug .muted {
            color: var(--text-tertiary);
            font-size: 0.8rem;
        }

        /* Hover row actions (edit/trash) */
        .row-actions {
            display: inline-flex;
            gap: var(--space-2);
            margin-left: var(--space-2);
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.15s ease;
            vertical-align: middle;
        }
        .grade-row:hover .row-actions {
            opacity: 1;
            pointer-events: auto;
        }
        .row-actions button {
            background: transparent;
            border: 1px solid var(--border-medium);
            border-radius: var(--radius-sm);
            padding: 2px 6px;
            cursor: pointer;
            font-size: 0.85rem;
            line-height: 1.2;
            color: var(--text-primary);
        }
        .row-actions button:hover {
            background: var(--bg-secondary);
        }
        /* Hide reset button unless the row is edited */
        .grade-row .row-action-reset {
            display: none;
        }
        .grade-row.edited .row-action-reset {
            display: inline-block;
        }
        .grade-row.dropped {
            opacity: 0.6;
        }
        .grade-row.dropped .assignment-name,
        .grade-row.dropped .grade-value,
        .grade-row.dropped .max-points,
        .grade-row.dropped .percentage {
            text-decoration: line-through;
        }

        /* Edit modal */
        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.35);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            padding: var(--space-4);
        }
        .modal-overlay.open {
            display: flex;
        }
        .modal {
            width: 100%;
            max-width: 420px;
            background: var(--bg-card);
            border: 1px solid var(--border-medium);
            border-radius: var(--radius-lg);
            padding: var(--space-4);
        }
        .modal h3 {
            margin: 0 0 var(--space-3) 0;
            font-size: 1rem;
            color: var(--text-primary);
        }
        .modal .field {
            display: grid;
            grid-template-columns: 1fr;
            gap: var(--space-2);
            margin-bottom: var(--space-3);
        }
        .modal label {
            font-size: 0.85rem;
            color: var(--text-secondary);
        }
        .modal input[type="number"] {
            padding: var(--space-2) var(--space-3);
            font-size: 0.9rem;
            border: 1px solid var(--border-medium);
            border-radius: var(--radius-md);
            background: var(--bg-secondary);
            color: var(--text-primary);
        }
        .modal .actions {
            display: flex;
            justify-content: flex-end;
            gap: var(--space-2);
            margin-top: var(--space-3);
        }
    </style>
</head>
