    <script>
        function goToAssignment(sectionId, assignmentId, event) {
            // Don't navigate if clicking the checkbox
            if (event.target.classList.contains('assignment-checkbox')) return;
            const url = '/assignment?section=' + sectionId + '&id=' + assignmentId;
            if (window.__spaNavigate) window.__spaNavigate(url);
            else window.location.href = url;
        }
        
        function toggleOverdue() {
            const list = document.getElementById('overdue-list');
            list.style.display = list.style.display === 'none' ? 'block' : 'none';
        }
        
        function toggleComplete(id, el) {
            el.classList.toggle('checked');
            el.closest('.assignment-item').classList.toggle('completed');
            
            // Save to cookie
            const completed = getCookie('completedAssignments') || [];
            if (el.classList.contains('checked')) {
                if (!completed.includes(id)) completed.push(id);
            } else {
                const index = completed.indexOf(id);
                if (index > -1) completed.splice(index, 1);
            }
            setCookie('completedAssignments', completed);
            
            // Update day completion stats
            updateDayCompletions();
        }
        
        function formatTime(minutes) {
            if (minutes < 60) return minutes + ' min';
            const hours = Math.floor(minutes / 60);
            const mins = minutes % 60;
            return hours + 'h' + (mins > 0 ? ' ' + mins + 'm' : '');
        }
        
        function updateDayCompletions() {
            // Update day headers
            const dayCompletions = document.querySelectorAll('.day-completion');
            let totalCompleted = 0;
            let totalRemaining = 0;
            let totalRemainingTime = 0;
            
            dayCompletions.forEach(dayComp => {
                const dayKey = dayComp.dataset.day;
                const total = parseInt(dayComp.dataset.total);
                const dayAssignments = document.querySelectorAll(`.assignment-item[data-day="${dayKey}"]`);
                let completedCount = 0;
                let remainingTime = 0;
                
                dayAssignments.forEach(item => {
                    const itemTime = parseInt(item.dataset.time) || 15;
                    if (item.classList.contains('completed')) {
                        completedCount++;
                    } else {
                        remainingTime += itemTime;
                    }
                });
                
                totalCompleted += completedCount;
                totalRemaining += (total - completedCount);
                totalRemainingTime += remainingTime;
                
                const percent = total > 0 ? Math.round((completedCount / total) * 100) : 0;
                const fill = dayComp.querySelector('.completion-fill');
                const text = dayComp.querySelector('.completion-text');
                
                fill.style.width = percent + '%';
                text.textContent = completedCount + '/' + total + ' (' + percent + '%)';
                
                if (percent === 100) {
                    fill.classList.add('complete');
                    text.classList.add('complete');
                } else {
                    fill.classList.remove('complete');
                    text.classList.remove('complete');
                }
                
                // Update day time display (remaining time only)
                const dayHeader = dayComp.closest('.day-header');
                const dayTime = dayHeader ? dayHeader.querySelector('.day-time') : null;
                if (dayTime) {
                    dayTime.innerHTML = `
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                        ~${formatTime(remainingTime)}
                    `;
                }
            });
            
            // Update total section stats
            const totalTimeEl = document.getElementById('total-time');
            const totalCompEl = document.getElementById('total-completion');
            
            if (totalTimeEl) {
                totalTimeEl.querySelector('span').textContent = '~' + formatTime(totalRemainingTime);
            }
            
            if (totalCompEl) {
                const totalAll = parseInt(totalCompEl.dataset.total);
                const percent = totalAll > 0 ? Math.round((totalCompleted / totalAll) * 100) : 0;
                const fill = totalCompEl.querySelector('.completion-fill');
                const text = totalCompEl.querySelector('.completion-text');
                
                fill.style.width = percent + '%';
                text.textContent = totalCompleted + '/' + totalAll + ' (' + percent + '%)';
                
                if (percent === 100) {
                    fill.classList.add('complete');
                    text.classList.add('complete');
                } else {
                    fill.classList.remove('complete');
                    text.classList.remove('complete');
                }
            }
        }
        
        // Load completed state on page load
        document.addEventListener('DOMContentLoaded', function() {
            const completed = getCookie('completedAssignments') || [];
            completed.forEach(id => {
                const checkbox = document.getElementById('check-' + id) || document.getElementById('check-overdue-' + id);
                if (checkbox) {
                    checkbox.classList.add('checked');
                    checkbox.closest('.assignment-item').classList.add('completed');
                }
            });
            
            // Update day completions after loading state
            updateDayCompletions();
        });
        
        function addCustomAssignment(e) {
            e.preventDefault();
            const title = document.getElementById('customTitle').value;
            const course = document.getElementById('customCourse').value || 'Custom';
            const due = document.getElementById('customDue').value;
            
            // Save to cookies
            const customs = getCookie('customAssignments') || [];
            customs.push({
                id: 'custom-' + Date.now(),
                title,
                course,
                due: due ? new Date(due).toISOString() : null
            });
            setCookie('customAssignments', customs);
            
            showToast('Custom assignment added!', 'success');
            
            // Clear form
            document.getElementById('customTitle').value = '';
            document.getElementById('customCourse').value = '';
            document.getElementById('customDue').value = '';
            
            // Reload to show
            location.reload();
        }
    </script>
